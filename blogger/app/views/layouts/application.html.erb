<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="flash"> <%= flash.notice %></p>
    <div id="container">
      <div id="content">
        <%= yield %>
        <hr>
        <h6>

          <% unless current_page?(login_path) %>
            <% if logged_in? %>
              <%= "Logged in as #{current_user.email}" %>
              <%= link_to "(logout)", logout_path %>
            <% else %>
              <%= link_to "(login)", login_path %>
            <% end %>
          <% end %>

        </h6>
      </div>
    </div>
  </body>
</html>

<!-- Used to wrap multiple view templates in your application -->
<!-- Layours can be created specific to each controller, but one is normally used to wrap every view template in the application -->