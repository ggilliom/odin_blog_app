<h1>All Articles</h1>

<ul id="articles">
	<% @articles.each do |article|%> <!-- result is hidden -->
		<li>
			<!-- <%= article.title %>  result is displayed -->

			<!-- article.title is displayed, article_path(article) is the route helper -->
			<%= link_to article.title, article_path(article) %>
		</li>
	<% end %>
</ul>


<%= link_to "Create a new Article", new_article_path, class: "new_article" %>
<br/>
<%= link_to "All Tags", tags_path %>
    